<div class=container>
<div class="row justify-content-md-center">
<div class="col-4">
<div class="jumbotron style="background-color: #FBFBFB;"">
<p id="notice"><%= notice %></p>

<p>
  <strong>Creator:</strong>
  <%= @trip.user.email %>
</p>

<p>
  <strong>Road:</strong>
  <%= @trip.road.name %>
</p>

<p>
  <strong>Date:</strong>
  <%= @trip.date.to_formatted_s(:long_ordinal) %>
</p>

<p>
  <strong>Time:</strong>
  <%= @trip.time.strftime("%H:%M %p") %>
</p>

<% if current_user.email == @trip.user.email %>
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Delete', trips_path, method: :delete %> |
<% else %>
<%= link_to 'Join' %> |
<% end %>
<%= link_to 'Back',trips_path %>
</div>
</div>
</div>
</div>
