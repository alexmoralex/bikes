<div class="container">
<div class="row">
<% @trips.each do |trip| %>
  <div class="col">
  <div class="card">
  <div class="card-header">
    <% if current_user.email == trip.user.email %>
    <%= "You" %>
    <% else %>
    <%= trip.user.email %>
    <% end %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%=link_to trip.road.name, "/trips/#{trip.id}", class:"btn btn-primary"%></h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
  </div>
  </div>
  </div>
  <br>
<% end %>
</div>
</div>
